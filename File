    <script>
        function calculateResults() {
            let counts = { A: 0, B: 0, C: 0, D: 0 };
            const questions = document.querySelectorAll('.question');

            questions.forEach(question => {
                const selectedOption = question.querySelector('input[type="radio"]:checked');
                if (selectedOption) {
                    counts[selectedOption.value]++;
                }
            });

            document.getElementById('totalA').textContent = counts.A;
            document.getElementById('totalB').textContent = counts.B;
            document.getElementById('totalC').textContent = counts.C;
            document.getElementById('totalD').textContent = counts.D;

            // Oculta todas as interpreta√ß√µes primeiro
            document.querySelectorAll('.interpretation-item').forEach(item => {
                item.style.display = 'none';
            });

            // Encontra a letra com maior contagem
            let maxCount = 0;
            let dominantLetters = [];
            for (const letter in counts) {
                if (counts[letter] > maxCount) {
                    maxCount = counts[letter];
                    dominantLetters = [letter];
                } else if (counts[letter] === maxCount && maxCount > 0) {
                    dominantLetters.push(letter); // Adiciona se houver empate e contagem > 0
                }
            }

            // Exibe apenas a(s) interpreta√ß√£o(√µes) dominante(s)
            if (dominantLetters.length > 0) {
                dominantLetters.forEach(letter => {
                    const interpId = 'interp' + letter;
                    const interpretationElement = document.getElementById(interpId);
                    if (interpretationElement) {
                        interpretationElement.style.display = 'block';
                        // Rola para a se√ß√£o de interpreta√ß√£o
                        interpretationElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
                    }
                });
            } else {
                // Caso nenhuma op√ß√£o seja selecionada
                alert("Por favor, selecione uma op√ß√£o para cada pergunta antes de ver o perfil.");
            }
        }
    </script>

